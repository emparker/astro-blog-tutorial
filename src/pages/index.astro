---
import MainLayout from "../layouts/MainLayout.astro"
import  PostCard  from "../components/PostCard.astro"
import Link from "../components/Link.astro"
//utils import
import { formatBlogPosts } from "../js/utils"

const allPosts = await Astro.glob("./blog/*.md")
const formattedPosts = formatBlogPosts(allPosts, {
	limit: 3,
})
---


<MainLayout title="Blog Home" description="This is the home page"> 
	<section class="container about" aria-label="About Me">
        <img
            src="/images/emily-headshot2.jpg"
            alt="My headshot"
            width="200"
            height="330"
        >
        <div class="content">
            <h1 class="h1">My Blog</h1>
            <p>Emily, an web developer at Tetonic Development, embraced this tutorial to enhance her Astro.build skills. In this blog, discover web development insights, focusing on Astro's capabilities. </p>
            <Link 
                href="/about/" 
                style="secondary"
                text="about me ðŸ‘‹"
            />
        </div>
    </section>
	<section class="container" aria-label="New Blog Posts">
		<h2 class="h1">New Blog Posts</h2>
		<div class="post-container">
			{
				formattedPosts.map((post) => 
				<PostCard 
					frontmatter={post.frontmatter} 
					url={post.url} 
					tagType="h3" 
				/>)
			}
		</div>
	</section>
</MainLayout>

