---
//library imports
import { Icon } from "astro-icon"

interface Props {
    text : string;
    href : string;
    style : "primary" | "secondary";
    icon? : {
        name : string;
        side : "left" | "right";
    };
    isFilled? : boolean;
    borderVisable? : boolean;
    classes? : string;
}

//pass in any defaults
//...rest => so any can be dropped into tag of anchor link. 
const { 
    text,
    href,
    style,
    icon,
    isFilled = true,
    borderVisable = false,
    classes,
    ...rest
} = Astro.props as Props

---

<a 
href={href}
class:list={[
    "link",
    classes,
    style,
    { filled: isFilled, bordered: borderVisable }
]}
{...rest}
>
{
    icon && icon.side === "left" && (
        <Icon name={icon.name} height="24" width="24" />
    )
}

<span>{text}</span>

{
    icon && icon.side === "right" && (
        <Icon name={icon.name} height="24" width="24" />
    )
}
</a>
